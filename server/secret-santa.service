[Unit]
Description=Secret Santa node app

[Service]
ExecStart=/var/www/return0software.com/santa-server/bin/www
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/return0software.com/santa-server

[Install]
WantedBy=multi-user.target